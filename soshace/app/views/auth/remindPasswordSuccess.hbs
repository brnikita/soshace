<div class="password-remind">
    <div class="js-password-remind-messages password-remind__messages hide"></div>
    <form role="form" class="js-password-reset-form" novalidate="novalidate">
        <div class="form-group">
            <label for="password">{{i18n 'Password'}}</label>
            <input type="password" class="form-control js-validate-input js-model-field"
                   name="password"
                   id="password"/>
        </div>
        <div class="form-group">
            <label for="confirmPassword">{{i18n 'Confirm password'}}</label>
            <input type="password" class="form-control js-validate-input js-model-field"
                   name="confirmPassword"
                   id="confirmPassword"/>
        </div>
        <input type="hidden" id="token" name="token" value="{{token}}"/>
        <input type="hidden" id="email" name="email" value="{{email}}"/>
        <button type="submit" class="reset-password-form__submit-btn btn btn-primary">{{i18n 'Reset'}}</button>
    </form>
</div>